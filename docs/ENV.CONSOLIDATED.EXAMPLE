# Canonical environment configuration (example)
# Copy to your hosting provider or local .env and fill values.

# App
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://houstonmobilenotarypros.com

# Auth
NEXTAUTH_URL=https://houstonmobilenotarypros.com
NEXTAUTH_SECRET=__set_in_hosting__
JWT_SECRET=__optional_if_used__
JWT_REFRESH_SECRET=__optional_if_used__

# Database / Cache
DATABASE_URL=__set_in_hosting__
REDIS_URL=__optional__

# Stripe
STRIPE_SECRET_KEY=__set_in_hosting__
STRIPE_WEBHOOK_SECRET=__set_in_hosting__
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=__set_in_hosting__

# Resend (email)
RESEND_API_KEY=__set_in_hosting__
FROM_EMAIL=noreply@houstonmobilenotarypros.com
CONTACT_FORM_SENDER_EMAIL=noreply@houstonmobilenotarypros.com

# Google Maps
GOOGLE_MAPS_API_KEY=__set_in_hosting__
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=__set_in_hosting__

# GHL core
GHL_API_BASE_URL=https://services.leadconnectorhq.com
GHL_API_KEY=__set_in_hosting__
GHL_LOCATION_ID=__set_in_hosting__
GHL_WEBHOOK_SECRET=__optional__

# GHL consent tags
GHL_SMS_CONSENT_TAG=Consent:SMS_Opt_In
GHL_SMS_OPTOUT_TAG=Consent:SMS_Opt_Out

# GHL ad-tracking custom fields (only those used in code)
GHL_CF_ID_AD_PLATFORM=__optional__
GHL_CF_ID_UTM_SOURCE=__optional__
GHL_CF_ID_UTM_MEDIUM=__optional__
GHL_CF_ID_UTM_CAMPAIGN=__optional__
GHL_CF_ID_UTM_TERM=__optional__
GHL_CF_ID_UTM_CONTENT=__optional__
GHL_CF_ID_PREFERRED_CALL_TIME=__optional__
GHL_CF_ID_CALL_REQUEST_REASON=__optional__

# Workflows (set the ones you use)
GHL_BOOKING_CONFIRMATION_WORKFLOW_ID=__optional__
GHL_PAYMENT_FOLLOWUP_WORKFLOW_ID=__optional__
GHL_24HR_REMINDER_WORKFLOW_ID=__optional__
GHL_POST_SERVICE_WORKFLOW_ID=__optional__
GHL_NO_SHOW_RECOVERY_WORKFLOW_ID=__optional__
GHL_CALL_REQUEST_WORKFLOW_ID=__optional__
GHL_NEW_CONTACT_WORKFLOW_ID=__optional__

# Ops / Monitoring
CRON_SECRET=__set_in_hosting__
SLACK_WEBHOOK_URL=__optional__
SMS_API_KEY=__set_in_hosting__
ADMIN_IP_ALLOWLIST=__optional_comma_separated_ips__

# Business config (optional)
BUSINESS_PHONE=832-617-4285
PAYMENT_EXPIRATION_HOURS=72
