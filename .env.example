# =============================================================================
# HOUSTON MOBILE NOTARY PROS - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Complete environment setup for Priority 1-4 implementations
# Last updated: After Priority 4 completion

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/hmnp_db"

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-32-chars-min"

# =============================================================================
# GOHIGHLEVEL INTEGRATION (Priority 1)
# =============================================================================
# CRITICAL: Use Private Integration Token (NOT API Key)
GHL_PRIVATE_INTEGRATION_TOKEN="your-ghl-private-integration-token"
GHL_WEBHOOK_SECRET="your-ghl-webhook-secret-key"
GHL_API_VERSION="2021-07-28"

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# =============================================================================
# REDIS CACHING (Priority 3)
# =============================================================================
# Required for high-performance caching and real-time features
REDIS_URL="redis://username:password@your-redis-host:6379"

# =============================================================================
# AI INTEGRATION (Priority 4)
# =============================================================================
# Required for AI-powered customer service and analytics
OPENAI_API_KEY="sk-your-openai-api-key"

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# SMS notifications via Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email service (if using Resend)
RESEND_API_KEY="re_your-resend-api-key"

# =============================================================================
# SECURITY & ENCRYPTION (Priority 2 & 3)
# =============================================================================
ENCRYPTION_KEY="your-32-character-encryption-key-here"
ADMIN_API_KEY="admin_your-secure-admin-api-key-here"
INTERNAL_API_KEY="internal_your-internal-api-key-here"

# =============================================================================
# MONITORING & ANALYTICS (Priority 3 & 4)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN="https://your-sentry-dsn"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================
# AWS S3 for document storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET_NAME="your-s3-bucket"
AWS_REGION="us-east-1"

# =============================================================================
# GOOGLE SERVICES (Optional)
# =============================================================================
# For maps and geocoding
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =============================================================================
# WEBHOOK ENDPOINTS (Auto-generated)
# =============================================================================
# These will be auto-generated based on your domain
WEBHOOK_BASE_URL="https://your-domain.vercel.app"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Control feature rollout
ENABLE_AI_FEATURES="true"
ENABLE_ADVANCED_ANALYTICS="true"
ENABLE_MARKETING_AUTOMATION="true"
ENABLE_PARTNER_API="true"

# =============================================================================
# DEVELOPMENT ONLY (DO NOT SET IN PRODUCTION)
# =============================================================================
# NODE_ENV="development"
# DEBUG="true" 