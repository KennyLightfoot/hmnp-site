# =============================================================================
# HOUSTON MOBILE NOTARY PROS - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file serves as the single source of truth for environment variables
# Last updated: 2026-02-15
# =============================================================================

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://houstonmobilenotarypros.com
NEXT_PUBLIC_CANONICAL_URL=https://houstonmobilenotarypros.com

# =============================================================================
# DATABASE
# =============================================================================
# Primary Database URL (pooled connections for web server)
DATABASE_URL=postgresql://username:password@db.example.com:5432/database
# Dedicated Prisma DB URL (non-pooling connection for migrations/schema work)
PRISMA_DB_URL=postgresql://username:password@db.example.com:5432/database

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_URL=https://houstonmobilenotarypros.com
NEXTAUTH_SECRET=your-nextauth-secret-here-at-least-32-chars
JWT_SECRET=your-jwt-secret-here-at-least-32-chars

# Admin credentials (for bootstrapping only, change after first login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong-password-here

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Email provider (options: sendgrid, mailgun, ses)
EMAIL_PROVIDER=sendgrid

# SendGrid 
SENDGRID_API_KEY=SG.your-key-here
EMAIL_FROM=noreply@houstonmobilenotarypros.com
EMAIL_FROM_NAME=Houston Mobile Notary Pros

# =============================================================================
# SMS SERVICES
# =============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# =============================================================================
# MAPPING & GEOCODING
# =============================================================================
# Google Maps
GOOGLE_MAPS_API_KEY=your-key-here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here.ingest.sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_PROJECT=your-project-name
SENTRY_ORG=your-org-name

# Application Insights
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# =============================================================================
# CRM INTEGRATION
# =============================================================================
# GoHighLevel
GHL_API_KEY=your-api-key-here
GHL_AGENCY_ID=your-agency-id
GHL_LOCATION_ID=your-location-id
GHL_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# CALENDAR INTEGRATION
# =============================================================================
# Google Calendar
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

# =============================================================================
# RON INTEGRATIONS
# =============================================================================
# BlueNotary API Configuration (primary RON provider)
BLUENOTARY_API_KEY=your-bluenotary-api-key
BLUENOTARY_BASE_URL=https://api.bluenotary.us
BLUENOTARY_NOTARY_EMAIL=your-notary-email@example.com
BLUENOTARY_WEBHOOK_SECRET=your-bluenotary-webhook-secret

# Legacy Proof.com Integration (decommissioned)
# PROOF_API_KEY=your-proof-api-key-here
# PROOF_API_BASE_URL=https://api.proof.com
# PROOF_WEBHOOK_SECRET=your-proof-webhook-secret-here
# PROOF_ORGANIZATION_ID=your-proof-organization-id
# PROOF_ENVIRONMENT=sandbox

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================
# Sanity.io
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-api-token
SANITY_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI (chat/copywriting)
OPENAI_API_KEY=sk-your-key-here

# Google Vertex AI (alternative model)
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_ID=gemini-pro

# =============================================================================
# STORAGE & MEDIA
# =============================================================================
# Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel
VERCEL_PROJECT_ID=your-project-id
VERCEL_TEAM_ID=your-team-id
VERCEL_TOKEN=your-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_RON=true
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_REFERRALS=false
NEXT_PUBLIC_MAINTENANCE_MODE=false