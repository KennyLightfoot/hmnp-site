{
  "name": "hmnp-site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm dotenv -e .env -- prisma generate && pnpm dotenv -e .env -- bash -c 'DATABASE_URL=\"$DATABASE_URL_UNPOOLED\" pnpm prisma migrate deploy' && NODE_ENV=production next build && next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "script:set-admin-password": "node --loader ts-node/esm scripts/set-admin-password.ts",
    "db:analyze": "node scripts/analyze-db-usage.cjs",
    "db:cleanup": "node scripts/cleanup-database.cjs",
    "db:cleanup:confirm": "node scripts/cleanup-database.cjs --confirm",
    "db:archive": "node scripts/archive-old-data.cjs",
    "db:archive:confirm": "node scripts/archive-old-data.cjs --confirm",
    "db:maintenance": "pnpm db:analyze && pnpm db:cleanup:confirm",
    "prisma:seed": "pnpm dotenv -e .env -- prisma db seed",
    "setup:booking": "node --loader ts-node/esm scripts/setup-booking-system.ts",
    "api:dev": "nodemon api/server.js",
    "api:start": "node api/server.js"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "axios": "^1.9.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "prisma": "^6.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
